<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/_itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="1080"
        app:scale_base_height="338">

        <ImageView
            android:id="@+id/_itemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/box_list"
            app:scale_height="308"
            app:scale_left="30"
            app:scale_top="0"
            app:scale_width="1020" />

        <TextView
            android:id="@+id/_itemTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/color_2e3192"
            android:gravity="center_vertical"
            app:scale_left="70"
            app:scale_top="0"
            app:scale_width="820"
            app:scale_height="132"
            app:scale_textsize="48"/>

        <ImageView
            android:id="@+id/_itemPlayIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_sound"
            android:scaleType="fitXY"
            app:scale_left="935"
            app:scale_top="36"
            app:scale_width="60"
            app:scale_height="60"/>

        <ImageView
            android:id="@+id/_itemDivideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@color/color_f5f5f5"
            android:scaleType="fitXY"
            app:scale_left="30"
            app:scale_top="132"
            app:scale_width="1020"
            app:scale_height="2"
            />

        <TextView
            android:id="@+id/_itemContentsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(국가, 주인등에) 충성하는\nDogs are loyal loving pets."
            android:textColor="@color/color_444444"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            app:scale_left="70"
            app:scale_top="134"
            app:scale_width="940"
            app:scale_height="174"
            app:scale_textsize="38"/>




    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>